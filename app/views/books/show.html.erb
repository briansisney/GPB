<div class="row">

	<h1><%= @book.title %></h1>

	<h3><%= @book.author %></h3>

	<img src="<%= @book.img_url %>" class = "book_img">
	<p><%= @book.description %></p>

	<%= button_to 'Checkout', book_path(@book), method: :delete %>
	<%if @book.points %>
		<h3>Points: <%= @book.points %></h3>
	<%else%>
		<p>No points</p>
	<%end%>

</div>
