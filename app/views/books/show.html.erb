<div class="row">

	<h1><%= @book.title %></h1>

	<h3><%= @book.author %></h3>

	<img src="<%= @book.img_url %>" class = "book_img">
	<p><%= @book.description %></p>


	<%= link_to 'Checkout', @book, method: :delete, data: { confirm: 'Get it!' } %>
	<%if @book.points %>
		<h3>Points: <%= @book.points %></h3>
	<%else%>
		<p>No points</p>
	<%end%>

</div>
