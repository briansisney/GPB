<div class="row">
	<div style= "padding:0px" class="large-3 columns">
		<img src=<%= current_user.image%> height="215" width="215">
	</div>
	<div class="large-9 columns">
		<h3><%= "#{current_user[:first_name]} #{current_user[:last_name]}"%></h3>
		<%if current_user.description != nil && current_user.description != ""%> 
			<p><%= current_user.description %></p>
	 	<%else %>
	 		<p><%= current_user.first_name %> is lazy and hasn't added a description</p>
	 	<% end %>
		<h4>Points</h4>
			<%if current_user.points.nil? then current_user.points = 10 end %>
			<%= current_user.points %>
		</br>
		</br>
			
		<%= link_to "Edit Description", edit_user_path(current_user.id) %>
	</div>
</div>
